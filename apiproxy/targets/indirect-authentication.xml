<TargetEndpoint name="indirect-authentication">
  <PreFlow name="PreFlow">
    <Request>
      <!-- all of this should be cached! -->
        <Step>
          <Name>SC-Retrieve-ServiceAccount-Key-JSON</Name>
        </Step>
        <Step>
          <Name>AM-Decode-ServiceAccount-Key-JSON</Name>
        </Step>
        <Step>
          <Name>AM-JWT-Elements</Name>
        </Step>
        <Step>
          <Name>GenerateJWT-Signed-with-RSA</Name>
        </Step>
        <Step>
          <Name>SC-Post-Google-OAuth-to-obtain-IDToken-via-JWT-Bearer-Grant</Name>
        </Step>
        <Step>
          <Name>AM-Indirect-Identity-Token-into-Authz-Header</Name>
        </Step>
    </Request>
    <Response/>
  </PreFlow>

  <Flows/>

  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <HTTPTargetConnection>
    <SSLInfo>
      <Enabled>true</Enabled>
      <Enforce>true</Enforce>
      <IgnoreValidationErrors>false</IgnoreValidationErrors>
    </SSLInfo>
    <URL>{propertyset.settings.cloudrun_service_url}</URL>
  </HTTPTargetConnection>
</TargetEndpoint>
