<ServiceCallout name='SC-Get-Identity-Token-from-Metadata'>
  <Request variable='simpleGetRequest'>
    <Set>
      <Verb>GET</Verb>
      <QueryParams>
        <QueryParam name='audience'>{propertyset.settings.cloudrun_service_url}</QueryParam>
      </QueryParams>
    </Set>
  </Request>
  <Response>tokenResponse</Response>
  <HTTPTargetConnection>
    <SSLInfo>
      <Enabled>false</Enabled>
    </SSLInfo>
    <Properties>
      <Property name='success.codes'>2xx</Property>
    </Properties>
    <URL>http://metadata.google.internal/computeMetadata/v1/instance/service-accounts/default/identity</URL>
  </HTTPTargetConnection>
</ServiceCallout>
